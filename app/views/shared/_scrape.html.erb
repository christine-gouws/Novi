
  <%= def scrape_zal(keyword) %>
      <%= url = "https://www.etsy.com/search?q=#{keyword}" %>
      <%= response = URI.open(url).read  %>
      <%= html_doc = Nokogiri::HTML(response)%>
      <%= zal_search = [] %>
    <%= html_doc.search('.v2-listing-card__info').each do |element|%>
      <%= zal_brand:element.search('.text-body').text.strip  %>
      <%= zal_name:element.search('.text-body').text.strip  %>
      <%= zal_price:element.search('.currency-value').text.strip %>
      <%=  zal_search << {brand:zal_brand, name:zal_name, price:zal_price}%>
    <%= end %>
    <%=zal_search%>
  <%= end %>

